<!-- Navigation -->
<div class="contain-to-grid sticky">

  <nav class="top-bar" data-topbar>
    <ul class="title-area">
      <li class="name">
        <h1><a class="logo show-for-small-only" href="#"><img src="http://placehold.it/50x50" /></a></h1>
      </li>
      <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>

    <section class="top-bar-section">

      <div class="logo-wrapper hide-for-small-only">
          <%= link_to image_tag('icon.gif'), home_path, class: "logo" %>
      </div>

      <!-- Right Nav Section -->
      <ul class="left">
        <li><%= link_to "Our Stores", stores_path %></li>
      </ul>

      <!-- Left Nav Section -->
      <ul class="right">
        <li class="has-dropdown">
          <a href="#">A &amp; M Creamery</a>
          <ul class="dropdown">
            <li><%= link_to "About Us", about_path %></li>
            <li><%= link_to "Contact Us", contact_path %></li>
            <li><%= link_to "Privacy Policy", privacy_path %></li>
          </ul>
        </li>
        <li>
          <% if logged_in? %>
            <%= link_to 'Logout', logout_path %>
          <% else %>
            <%= link_to 'Login', login_path %>
          <% end %>
        </li>
      </ul>

    </section>
  </nav>
</div><!-- /navigation -->